{
	"compilerOptions": {
		"target": "ES5",
		"outDir": "bin",
		"rootDir": "src",
		"jsx": "react",
		"lib": ["dom", "es2017"],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"removeComments": true,
		"skipDefaultLibCheck": true
	},
	"exclude": [
		"bin",
		"../node_modules"
	]
}
