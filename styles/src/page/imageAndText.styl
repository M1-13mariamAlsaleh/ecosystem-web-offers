@require "../common.styl"

$text-font-size()
	font-size 3.4vw

.page.imageAndText
	flex-box(column)
	width: 100%
	height: 100%
	font-roboto()

	.header
		padding 5vh 0 3vh
		flex-box(column)
		min-height 22vh
		border none
		img
			height: 31.7vw
			margin: 0 auto 0
		.title
			font-roboto()
			color: #f9f9f9
			margin: 3vh auto 0
			letter-spacing: -0.5px
			font-size 1.25rem
			text-align center
	.body
		flex-box(column)
		height: 36vh
		margin 0 auto 0
		font-roboto()
		font-weight 300
		line-height: 1.7
		$text-font-size()
		color #f9f9f9
		width 70vw
		text-align center
	.footer
		margin: auto auto 3vh
		text-align: center
		$text-font-size()
		color #f9f9f9
	.btn
		btn()
		border-width 0
		font-roboto()
		color white
		background-color $kin-purple
		margin: 0 auto 5vw

